#!/usr/bin/env node

var program = require('commander')
  , path = require('path');

program
  .version(require('../package').version)
  .usage('<command> [options]')
  .command('install', 'install a model from a datapackage')
  .command('bootstrap', 'bootstrap a datapackage for an inference pipeline')
  .command('run', 'run a pipeline from a datapackage')
  .command('predict', 'add a prediction resource to a datapackage')

  .parse(process.argv);

process.on('uncaughtException', function(err){
  if(err.code === 'ECONNREFUSED'){
    console.error('\033[91mFAIL\033[0m: could not connect to the server (%s).', err.code);
    process.exit(1);
  } else {
    console.error('something went wrong run ssm help or ssm help cmd for help');
  }
});
